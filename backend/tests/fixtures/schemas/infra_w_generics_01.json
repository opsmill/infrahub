{
    "version": "1.0",
    "generics": [
        {
            "name": "Interface",
            "namespace": "Infra",
            "display_labels": ["name__value"],
            "attributes": [
                {"name": "name", "kind": "Text"},
                {"name": "description", "kind": "Text", "optional": true},
                {"name": "speed", "kind": "Number"},
                {"name": "enabled", "kind": "Boolean", "default_value": true},
                {"name": "role", "kind": "Dropdown", "choices": [{"name": "router"}, {"name": "firewall"}]},
                {"name": "status", "kind": "Dropdown", "choices": [{"name": "active"}, {"name": "planned"}]}
            ],
            "relationships": [
                {"name": "device", "peer": "InfraDevice", "optional": false, "cardinality": "one", "kind": "Parent"},
                {"name": "tags", "peer": "BuiltinTag", "optional": true, "cardinality": "many", "kind": "Attribute"}
            ]
        }
    ],
    "nodes": [
        {
            "name": "Device",
            "namespace": "Infra",
            "default_filter": "name__value",
            "display_labels": ["name__value"],
            "attributes": [
                {"name": "name", "kind": "Text", "unique": true},
                {"name": "description", "kind": "Text", "optional": true},
                {"name": "type", "kind": "Text"}
            ],
            "relationships": [
                {
                    "name": "interfaces",
                    "peer": "InfraInterface",
                    "optional": true,
                    "cardinality": "many",
                    "kind": "Component"
                },
                {"name": "tags", "peer": "BuiltinTag", "optional": true, "cardinality": "many", "kind": "Attribute"}
            ]
        },
        {
            "name": "InterfaceL3",
            "namespace": "Infra",
            "display_labels": ["name__value"],
            "inherit_from": ["InfraInterface"],
            "relationships": [
                {
                    "name": "ip_addresses",
                    "peer": "InfraIPAddress",
                    "optional": true,
                    "cardinality": "many",
                    "kind": "Component"
                }
            ]
        },
        {
            "name": "IPAddress",
            "namespace": "Infra",
            "default_filter": "address__value",
            "display_labels": ["address__value"],
            "attributes": [
                {"name": "address", "kind": "Text"},
                {"name": "description", "kind": "Text", "optional": true}
            ],
            "relationships": [
                {"name": "interface", "peer": "InfraInterface", "optional": true, "cardinality": "one", "kind": "Parent"}
            ]
        }
    ]
}
