{
    "name": "INFRAHUB CodeSpace Configuration",
    "build": {
      "dockerfile": "./Dockerfile",
      "context": "."
    },
    "customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			"settings": {
                "python.pythonPath": "/usr/bin/python3",
                "terminal.integrated.shell.linux": "/bin/bash",
                "python.venvPath": "/workspace/.venv",
                "python.linting.enabled": true
              },
			"extensions": [
                "pomdtr.excalidraw-editor",
                "wholroyd.jinja",
                "ms-python.vscode-pylance",
                "shardulm94.trailing-spaces",
                "nickmillerdev.pytest-fixtures",
                "yzhang.markdown-all-in-one",
                "GraphQL.vscode-graphql-syntax"
            ]
		}
	},
    "remoteUser": "infrahub",
    "remoteEnv": {
        "INFRAHUB_SDK_API_TOKEN": "06438eb2-8019-4776-878c-0941b1f1d1ec"
    },
    "forwardPorts": [8000],
    "postCreateCommand": "/workspace/.devcontainer/postCreateCommand.sh",
    "features": {
		"docker-in-docker": "latest",
		"github-cli": "latest"
	},
    "hostRequirements": {
		"memory": "2gb"
	}
}
